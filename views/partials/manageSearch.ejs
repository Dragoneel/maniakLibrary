
<div class="col-lg-12" ng-controller="manageController">
                        
                        <form>
                            <input type="text" placeholder="Manage a book ?" class="search" ng-change="searchBooks()" value="" ng-model="formData.text"/>
                        </form>


                        <div class="row">


                        	<div ng-if="hits.isUpdated" class="alert alert-success noResult">
							        Updated successfuly
							</div>

							<div ng-if="hits.isDeleted" class="alert alert-danger noResult">
							        Deleted successfuly
							</div>


							<div ng-if="hits.length == 0" class="alert alert-danger noResult">
							        No results
							</div>

							<div ng-if="hits.isDeleted != true">
								<div ng-if="hits.inUpdate != true">
									<div ng-if="hits.isUpdated != true">
										<div  ng-repeat="book in hits">
				                            <div class="col-lg-3">
				                                <div class="result">
				                                    <img src="http://placehold.it/250x150"/>
				                                    <div class="topInformations">
					                                    <h5><strong><span ng-bind-html="book.title.substr(0,30) | highlight:formData.text"></span></strong></h5>
					                                    <!-- <h3  ng-bind-html="book.title | highlight:formData.text"></h3> -->
					                                    <h6>By 
					                                    	<span ng-bind-html="book.author | highlight:formData.text"></span>
					                                    </h6>
					                                    <h6> <strong>ISBN:</strong> {{book.isbn.substr(0,10)}}</h6>
					                                    <h6><strong>Remaining copy:</strong> {{book.nb_copy}}</h6>
					                                </div>
					                                <div class="bottomButtons">
						                                <button  class="btn modify" ng-click="modifyBook(book._id)">Modify</button>
						                                <button  class="btn delete" ng-click="deleteBook(book._id)">Delete</button>
						                            </div>
				                                </div>
				                            </div>
				                        </div>
			                        </div>
			                    </div>
	                        </div>

	                        <div ng-if="hits.inUpdate" class="col-lg-12 modify">
	                        			<h3 style="margin-bottom:20px">Modify book</h3>
