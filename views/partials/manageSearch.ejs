		                                	<input type="hidden" ng-model="bookData.id" />
		                                	<label>Title:</label>
		                                	<input type="text" ng-model="bookData.title" />
		                                	<label>Isbn:</label>
		                                	<input type="text" ng-model="bookData.isbn" />
		                                	<label>Author:</label>
		                                	<input type="text" ng-model="bookData.author" />
		                                	<label>Genre:</label>
		                                	<input type="text" ng-model="bookData.genre" />
		                                	<label>Published:</label>
		                                	<input type="date" ng-model="bookData.published" />
		                                	<label>Pages:</label>
		                                	<input type="number" ng-model="bookData.pages" />
		                                	<label>Number of copy:</label>
		                                	<input type="number" ng-model="bookData.nb_copy" />
		                                	<label>Resume:</label>
		                                	<textarea style="height:150px" ng-model="bookData.resume" ></textarea>	
		                                	<button  class="btn btn-primary save"  ng-click="saveModifiedBook()">Update</button>
		                                </form> -->
		               <form name="bookForm" ng-submit="saveModifiedBook(bookForm.$valid,bookData)" novalidate>
					        <!-- NAME -->
					        <div class="form-group" ng-class="{ 'has-error' : bookForm.title.$invalid && !bookForm.title.$pristine }">
					            <label>Title *</label>
					            <input type="text" name="title" class="form-control" ng-model="bookData.title" required>
					            <p ng-show="bookForm.title.$invalid && !bookForm.title.$pristine" class="help-block">Title is required.</p>
					        </div>

					        <!-- ISBN -->
					        <div class="form-group">
					            <label>Isbn</label>
					            <input type="text" name="isbn" class="form-control" ng-model="bookData.isbn">
					        </div>

					        <!-- AUTHOR -->
					        <div class="form-group" ng-class="{ 'has-error' : bookForm.author.$invalid && !bookForm.author.$pristine }">
					            <label>Author *</label>
					            <input type="text" name="author" class="form-control" ng-model="bookData.author" required>
					            <p ng-show="bookForm.author.$invalid && !bookForm.author.$pristine" class="help-block">Author is required.</p>
					        </div>

					        <!-- GENRE -->
					        <div class="form-group">
					            <label>Genre</label>
					            <input type="text" name="genre" class="form-control" ng-model="bookData.genre">
					        </div>

					        <!-- PUBLISHED -->
					        <div class="form-group">
					            <label>Published</label>
					            <input type="date" name="published" class="form-control" ng-model="bookData.published">
					        </div>

					        <!-- PAGES -->
					        <div class="form-group" ng-class="{ 'has-error' : bookForm.pages.$invalid && !bookForm.pages.$pristine }">
					            <label>Pages</label>
					            <input type="number" name="pages" class="form-control" ng-model="bookData.pages">
					            <p ng-show="bookForm.pages.$invalid && !bookForm.pages.$pristine" class="help-block">Enter a valid number.</p>
					        </div>

					        <!-- NUMBER OF COPY -->
					        <div class="form-group" ng-class="{ 'has-error' : bookForm.nb_copy.$invalid && !bookForm.nb_copy.$pristine }">
					            <label>Number of copy</label>
					            <input type="number" name="nb_copy" class="form-control" ng-model="bookData.nb_copy">
					            <p ng-show="bookForm.nb_copy.$invalid && !bookForm.nb_copy.$pristine" class="help-block">Enter a valid number.</p>
					        </div>

					            
					        <!-- RESUME -->
					        <div class="form-group" >
					            <label>Resume</label>
					            <textarea style="height:150px;" name="resume" class="form-control" ng-model="bookData.resume"></textarea>
					        </div>
					        
					        <button type="submit" class="btn btn-primary save">Save</button>
					        
					    </form>

	                        </div>


                        </div>







                        
</div>


