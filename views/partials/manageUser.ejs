
<div class="col-lg-12" ng-controller="userController">
                        
                        <form>
                            <input type="text" placeholder="Looking for a user ?" class="search" ng-change="searchUsers()" value="" ng-model="formData.text"/>
                        </form>


                        <div class="row">


                        	<div ng-if="hits.isUserUpdated" class="alert alert-success noResult">
							        Updated successfuly
							</div>

							<div ng-if="hits.length == 0" class="alert alert-danger noResult">
							        No results
							</div>

								<div ng-if="hits.inUpdate != true">
									<div ng-if="hits.isUserUpdated != true">
										<div  ng-repeat="user in hits">
				                            <div class="col-lg-3">
				                                <div class="result user">
				                                    <h5><strong>Name:</strong> {{user.name}}</h5>
				                                    <h5><strong>Email</strong> {{user.email}}</h5>
				                                <button  class="btn btn-primary" style="margin-top:20px;margin-left:15px" ng-click="addPrivilege(user._id,user.name)">Make as administrator</button>
				                                </div>
				                            </div>
				                        </div>
			                        </div>
	                        </div>

	                       
                        </div>







                        
</div>


